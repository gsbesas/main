<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_simple_label_gsbesas">
            <!--<div style="width: 32%; display: inline-table; height:14rem;">-->
            <div style="width: 40%; display: inline-table; height:14rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black">
                    <tr>
                        <th class="table text-center" style="height: 4rem; padding: 0">
                            <span class="text-left" style="font-weight: normal; font-size:10pt; vertical-align: top">NEW</span>
                            &#160;&#160;
                            <strong t-field="product.display_name"/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height: 6rem">
                            <t t-if="product.barcode">
                                <img alt="Barcode" t-if="len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>
                                <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>
                                <span t-field="product.default_code"/>&#160;&#160;&#160;&#160;
                                <strong>Exp:<span t-field="product.exp_date" t-options='{"format": "dd-MMM-yyyy"}'/></strong>
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" style="height: 2rem; padding: 0">
                            <strong t-field="product.contents"/>
                        </td>
                    </tr>
                </table>
            </div>
        </template>
        
        <template id="report_productlabel_gsbesas">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="product">
                        <t t-call="gsbesas_product_label.report_simple_label_gsbesas">
                            <t t-set="product" t-value="product"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>
        
    <!--<>product label gsbesas medium start</span><>-->
        
        <template id="report_simple_label_gsbesas_medium">
            <!--<div style="width: 32%; display: inline-table; height:14rem;">-->
            <div style="width: 50%; display: inline-table; height:14rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black">
                    <tr>
                        <th class="table text-center" style="height: 4rem; padding-top: 0; padding-bottom: 0">
                            <span class="text-left" style="font-weight: normal; font-size:10pt; vertical-align: top">NEW</span>
                            &#160;&#160;
                            <strong t-field="product.display_name"/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-right align-right" style="height: 6rem; padding-bottom: 0">
                            <t t-if="product.barcode">
                                <span t-field="product.default_code"/>
                                <img alt="Barcode" t-if="len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)" style="width:65%;height::4rem;"/>
                                <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:65%;height::4rem;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:65%;height::4rem;"/>
                                <strong t-field="product.contents" style="font-size:10pt"/>
                                &#160;&#160;&#160;&#160;
                                <strong>Exp:<span class="text-left" t-field="product.exp_date" t-options='{"format": "dd-MMM-yyyy"}' style="vertical-align: top; padding-left: 0px"/></strong>
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" style="line-height: 100%; padding-top: 0">
                            <strong>Ingredients:</strong>
                            <span t-field="product.description" style="font-size:7pt; line-height: 100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" style="padding-bottom: 0">
                            <strong>Manufacturer:</strong>
                            <span t-field="product.manufacture" style="font-size:11pt"/>
                        </td>
                    </tr>
                </table>
            </div>
        </template>
        
        <template id="report_productlabel_gsbesas_medium">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="product">
                        <t t-call="gsbesas_product_label.report_simple_label_gsbesas_medium">
                            <t t-set="product" t-value="product"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>

    </data>
</odoo>
