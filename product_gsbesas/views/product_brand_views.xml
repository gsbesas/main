<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
    <menuitem id="product_brand_menu_root"
            name="Brands"
            web_icon="sale_management,static/description/icon.png"
            active=""
            sequence="10"/>
    
    <menuitem id="product_brand_menu"
            name="Brands"
            parent="product_brand_menu_root"
            action="product_gsbesas.product_brand_action"
            sequence="1"/>
        
    <record id="product_brand_form_view" model="ir.ui.view">
        <field name="name">product.brand.form.view</field>
        <field name="model">product.brand</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Product Brand">
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Product Brand Name"/>
                        <h1><field name="name" placeholder="Product Brand Name"/></h1>
                    </div>
                    <group>
                        <field name="company_id" options="{'no_create': True}"/>
                        <field name="phone" widget="phone" />
                        <field name="email" widget="email" />
                    </group>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="product_brand_search_view" model="ir.ui.view">
        <field name="name">product.brand.search</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <search string="Product Brand">
                <field name="name" string="Product Brand" />
                
            </search>
        </field>
    </record>
    
    <record id="product_brand_tree_view" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Product Brands" multi_edit="1" duplicate="false" sample="1">
                <field name="name" />
                <field name="company_id" options="{'no_create': True}"/>
                <field name="phone" widget="phone" />
                <field name="email" widget="email" />
            </tree>
        </field>
    </record>
    
    <record id="product_brand_kanban_view" model="ir.ui.view">
            <field name="name">Brand Kanban</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <kanban sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.product', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <field name="phone"/>
                                        <field name="email" widget="email" />
                                    </div>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record id="product_brand_action" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="product_brand_tree_view"/>
        <field name="search_view_id" ref="product_brand_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new brand
            </p>
        </field>
    </record>


    </data>
</odoo>
